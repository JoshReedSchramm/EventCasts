<% if !@sub_groups.nil?  %>
	<ul id='my_groups_list'>
	<% @sub_groups.each do |sg| 
		sg.populate_sub_group()
	%>
	   	<li>
			<a href='/<%= sg.get_full_path %>'>#<%= sg.name %></a>
				<% if !sg.sub_groups.nil? %>
				<ul id='user_groups_sub_groups'>						
					<% sg.sub_groups.each do |child_group| %>
						<li>
							<a href='/<%= sg.get_full_path %>'>#<%= child_group.name %></a>
				    	</li>
					<% end %>
				</ul>
			<% end %>					
		</li>
	<% end %>
</ul>
	
<% end %>
