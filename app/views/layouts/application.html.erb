<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
	<title>EventCasts - Follow the Conversation</title>
	<%= stylesheet_link_tag 'style' %>
	<%= javascript_include_tag "jquery.min.js" %>
</head>
<body>
    <div id="container">
	    <div id="header">
            <%= link_to image_tag("logo.png", :border=>0, :alt => 'EventCasts'), {:controller => 'home', :action => 'index'}, :id => 'logo' %>

            <ul id="menu">
                <% if session[:user].blank? %>
					<li><a href='/user/login'>Login</a></li>
					<li><a href='/user/register'>Join EventCasts</a></li>
                <% end %>
            </ul>
        </div>    
		<div id='body'>
			<div id="flash"><%= flash[:notice] %></div>	
			<%= yield  %>
		</div>
		<div id="footer">
	        <div id="footer-content">
		FOOTER
	        </div>
	    </div>	    
    </div>
	<!-- google analytics -->
	<script type="text/javascript">
		var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
		document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
	</script>
	<script type="text/javascript">
		try {
		var pageTracker = _gat._getTracker("UA-10353595-1");
		pageTracker._trackPageview();
		} catch(err) {}
	</script>
</body>
</html>
