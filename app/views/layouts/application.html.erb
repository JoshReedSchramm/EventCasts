<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
	<title>EventCasts - Follow the Conversation</title>
	<%= stylesheet_link_tag 'style' %>
	<%= javascript_include_tag "jquery.min.js" %>
	<%= javascript_include_tag "application.js" %>
</head>
<body>
    <div id="page">
        <div id="container" class="clear_fix">
            <div id="header">
                <ul id="menu">
                    <% if session[:user].blank? %>
                        <li><a href='/user/login'>Login</a></li>
                        <li><a href='/user/register'>Create an Account</a></li>
						<li><a href='/events/create' id='create_event'>Create an Event</a></li>

                    <% end %>
                </ul>
            </div>
            <div id="header_search_box">
                <% form_for :search, :url => {:controller=>"home", :action=>"search"}, :html => { :id => "search_form" } do |p| %>
                    <%= p.text_field :query, :size=>30, :maxlength=>140, :id=>'search_box', :value=>'Find an event or group' %>
                    <a onclick="$('#search_form').submit();" class="submit" type="submit">Search</a>
                <% end %>
            </div>
            <div id='body'>    
                <div id="flash"><%= flash[:notice] %></div>
                <%= yield  %>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</body>
</html>
