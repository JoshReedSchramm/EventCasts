<% if !@user.nil? %>
	<ul id="user_events">
		<% for event in @user.events %>
			<% if event.parent.nil? %>
			    <li><a href='/<%= event.full_path %>'>#<%= event.name %></a>
					<% if !event.events.nil? %>
						<ul id="user_events_sub_events">
							<% event.events.each do |sg| %>
								<li><a href='/<%= sg.full_path %>'>#<%= sg.name %></a></li>
							<% end %>
						</ul>
					<% end %>			
				</li>		
			<% end %>
		<% end %>
	</ul>	
<% end %>
